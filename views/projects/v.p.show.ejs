            </tr>
            <tr>
                <td><br></td>
                <td>Description: <span class="black"><%= project.descript %></span>   </td>
                <td><br></td>
            </tr>
            <tr>
                <td><br></td>
                <td>What I'm Looking for Feedback On: <span class="black"><%= project.feedbackType %></span>  </td>
                <td><br></td>
            </tr>
            <tr></tr>
                <td></td>
                <% if (user) { %>
                    <% if (project.user.equals(user._id)) { %>
                        <br><a href="/projects/<%= project.id %>/edit">Edit Project</a>
                    <% } %>
                <% } %>
                <td>
                    <form id="feedback-form" action="/projects/<%= project._id %>/feedback" method="POST">
                        <label><ul>Feedback / Comments / Suggestions:</ul></label>
                        <textarea id="feedback-box" name="content" placeholder="I love the way you...I found a bug...Maybe you could add... "></textarea><br>
                        <!-- <label>Rating:</label>
                        <select name="rating">
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5"selected>5</option>
                        </select> -->
                        <input type="submit" value="Submit Feedback">
                    </form>
                </td>
                <td></td>
            </tr>
        </table>
