    <section>
                
        <table>
            <thead>
                <tr>
                    <th><u></u></th>
                    <th><u></u></th>
                    <th><u></u></th>
                </tr>
            </thead>
            
            <tr>
                <td></td>
                <td>Designer: <span class="black"><%= project.userName %></span> </td>
                <td>
                </td>
            </tr>
            <tr>
                <td><br></td>
                <td>Project Title: <span class="black"><%= project.title %></span> </td>
                <td><br></td>
            </tr>
            <tr>
                <td><br></td>
                <td>Deployed Project Link: <span class="black"><a href="<%= project.link %>" target="_blank">
